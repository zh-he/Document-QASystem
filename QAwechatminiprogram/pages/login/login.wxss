/* 布局与渐变背景 */
.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
  }
  
  /* ===== 标题 ===== */
  .title-section {
    width: 100%;
    padding: 40rpx 0;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
  }
  .title {
    font-size: 36rpx;
    font-weight: 600;
    color: #2c3e50;
    text-align: center;
    letter-spacing: 2rpx;
    line-height: 1.4;
  }
  
  /* ===== 卡片 ===== */
  .form-card {
    width: 90%;
    max-width: 650rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
    padding: 40rpx 30rpx;
    margin-bottom: 40rpx;
    box-sizing: border-box;
  }
  .form-item { margin-bottom: 30rpx; }
  .label {
    display: block;
    font-size: 28rpx;
    color: #34495e;
    margin-bottom: 12rpx;
    font-weight: 500;
  }
  
  /* 输入框 */
  .input-container {
    display: flex;
    align-items: center;
    border: 2rpx solid #dfe6e9;
    border-radius: 12rpx;
    padding: 0 24rpx;
    height: 88rpx;
    transition: all 0.3s ease;
  }
  .input-container:hover { border-color: #b2bec3; }
  .input {
    flex: 1;
    height: 100%;
    font-size: 30rpx;
    color: #2d3436;
    background: transparent;
  }
  .placeholder { color: #b2bec3; }
  
  /* ===== 忘记密码 ===== */
  .forgot-container {
    display: flex;
    justify-content: flex-end;   /* 右对齐 */
    margin-bottom: 30rpx;
  }
  .forgot-password {
    font-size: 26rpx;
    color: #3498db;
  }
  
  /* ===== 登录按钮 ===== */
  .btn-login {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background: linear-gradient(135deg, #4285f4, #3367d6);
    color: #fff;
    font-size: 32rpx;
    font-weight: 500;
    border-radius: 12rpx;
    letter-spacing: 4rpx;
    box-shadow: 0 6rpx 16rpx rgba(66, 133, 244, 0.3);
    transition: all 0.2s ease;
    margin-bottom: 30rpx;
  }
  .btn-login-hover {
    opacity: 0.9;
    transform: translateY(2rpx);
    box-shadow: 0 3rpx 8rpx rgba(66, 133, 244, 0.3);
  }
  
  /* ===== 分割线与注册 ===== */
  .divider {
    display: flex;
    align-items: center;
    margin: 30rpx 0;
  }
  .line {
    flex: 1;
    height: 2rpx;
    background-color: #e9ecef;
  }
  .or {
    padding: 0 24rpx;
    font-size: 26rpx;
    color: #95a5a6;
  }
  .register-container {
    text-align: center;
    font-size: 28rpx;
    color: #636e72;
  }
  .btn-register {
    color: #4285f4;
    margin-left: 10rpx;
    font-weight: 500;
    position: relative;
  }
  .btn-register::after {
    content: '';
    position: absolute;
    bottom: -4rpx;
    left: 0;
    width: 100%;
    height: 2rpx;
    background: #4285f4;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }
  .btn-register-hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }
  